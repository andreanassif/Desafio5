<table class='table'>
  <thead>
    <tr>
      <th scope='col'>ID</th>
      <th scope='col'>Producto</th>
      <th scope='col'>Precio</th>
      <th scope='col'>Foto</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <th scope='row'>{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>
          <img src={{this.img}} alt='img' width='100' />
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="table.js"></script>